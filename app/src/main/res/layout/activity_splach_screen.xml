<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
        android:gravity="center"
    android:background="@drawable/splachbackground"
    tools:context=".SplachScreen">


    <ImageView
        android:id="@+id/splach"
        android:layout_width="225dp"
        android:layout_height="305dp"
        android:layout_gravity="center"
        android:src="@drawable/pecocksplach"
        android:visibility="visible" />

    <TextView
        android:layout_width="399dp"
        android:layout_height="62dp"
        android:layout_alignStart="@+id/splach"
        android:layout_alignTop="@+id/splach"
        android:layout_alignEnd="@+id/splach"
        android:layout_alignBottom="@+id/splach"
        android:layout_marginStart="-82dp"
        android:layout_marginTop="283dp"
        android:layout_marginEnd="-93dp"
        android:layout_marginBottom="-40dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Start Your Day"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_20ssp" />



</RelativeLayout>